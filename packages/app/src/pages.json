{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/message/message",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/friends/friends",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/commits/commits",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/personal_information/personal_information",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/moment/moment",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
      "path": "pages/launch/launch",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/menu/menu",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/chat/chat",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "softinputMode": "adjustResize"
        }
      }
    },
    {
      "path": "pages/entry/entry",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/find/find",
      "style": {
        "navigationStyle": "custom",
        "animationDuration": 500
      }
    },
    {
      "path": "pages/new_group/new_group",
      "style": {
        "navigationStyle": "custom",
        "animationDuration": 500
      }
    },
    {
      "path": "pages/notice/notice",
      "style": {
        "navigationBarTitleText": "通知",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/home/home",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/add/add",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/publish/publish",
      "style": {
        "navigationBarTitleText": "发布",
        "animationType": "slide-in-right",
        "animationDuration": 500,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/unknown/unknown",
      "style": {
        "navigationBarTitleText": "404",
        "navigationStyle": "custom"
      }
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#ec7436",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/message/message",
        "iconPath": "static/tabbar-icons/discover.png",
        "selectedIconPath": "static/tabbar-icons/discover_fill.png",
        "text": "消息"
      },
      {
        "pagePath": "pages/friends/friends",
        "iconPath": "static/tabbar-icons/discover.png",
        "selectedIconPath": "static/tabbar-icons/discover_fill.png",
        "text": "好友"
      },
      {
        "pagePath": "pages/moment/moment",
        "iconPath": "static/tabbar-icons/my.png",
        "selectedIconPath": "static/tabbar-icons/my_fill.png",
        "text": "空间"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "Uniapp社区",
    "navigationBarBackgroundColor": "#328CFF",
    "backgroundColor": "#328CFF"
  }
}
